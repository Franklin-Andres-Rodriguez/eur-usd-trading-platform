# =============================================================================
# ENTERPRISE ENVIRONMENT TEMPLATE - EUR/USD Trading Platform
# Security Classification: TEMPLATE ONLY - NO ACTUAL SECRETS
# =============================================================================

# Application Environment
NODE_ENV=development
TRADING_ENVIRONMENT=sandbox
APP_VERSION=1.0.0
LOG_LEVEL=info

# Server Configuration
PORT=3000
HOST=localhost
SERVER_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Database Configuration (Development)
DATABASE_URL=mongodb://localhost:27017/trading_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Broker API Configuration (Sandbox Only)
BROKER_API_KEY=your_sandbox_api_key_here
BROKER_SECRET_KEY=your_sandbox_secret_here  
BROKER_ENDPOINT=https://api-sandbox.broker.com/v1
BROKER_TIMEOUT=5000
BROKER_RETRY_ATTEMPTS=3
BROKER_RATE_LIMIT=100

# Market Data Provider (Test Environment)
MARKET_DATA_TOKEN=your_test_token_here
MARKET_DATA_WS_URL=wss://stream-test.market-data.com
MARKET_DATA_REST_URL=https://api-test.market-data.com/v1
MARKET_DATA_FREQUENCY=tick

# Security Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters_required_for_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_32_chars_minimum

# CORS & Security Headers
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
TRUSTED_PROXIES=127.0.0.1
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Trading Risk Management
MAX_POSITION_SIZE=10000
MAX_DAILY_LOSS=500
DEFAULT_STOP_LOSS=0.01
SLIPPAGE_TOLERANCE=0.001
EXECUTION_TIMEOUT=3000
CIRCUIT_BREAKER_THRESHOLD=5

# Monitoring & Observability
MONITORING_ENABLED=false
METRICS_ENDPOINT=http://localhost:9090
LOG_FORMAT=json
ERROR_TRACKING_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_ADVANCED_TRADING=false
ENABLE_ALGO_TRADING=false
ENABLE_MARGIN_TRADING=false
MAINTENANCE_MODE=false

# External Services
EMAIL_SERVICE_API_KEY=your_email_service_key
SMS_SERVICE_API_KEY=your_sms_service_key
NOTIFICATION_WEBHOOK_URL=your_webhook_url

# Compliance & Audit
AUDIT_LOG_LEVEL=info
COMPLIANCE_MODE=development
GDPR_MODE=true
DATA_RETENTION_DAYS=2555
