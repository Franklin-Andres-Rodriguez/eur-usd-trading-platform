# EUR/USD Trading Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Alpha Vantage API Key (Required)
# Get your free key at: https://www.alphavantage.co/support/#api-key
# Free tier: 5 API requests per minute, 500 requests per day
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Alpha Vantage Base URL (Optional - uses default if not set)
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
# Options: development, staging, production
NODE_ENV=development

# Development Server Configuration
PORT=3000
HOST=localhost

# Application Name (for logging and monitoring)
APP_NAME=EUR-USD-Trading-Platform
APP_VERSION=1.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Rate Limiting (requests per minute)
# Alpha Vantage free tier allows 5 requests/minute
API_RATE_LIMIT=5

# Request timeout in milliseconds
API_TIMEOUT=10000

# CORS allowed origins (comma separated)
# For development: http://localhost:3000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Error Tracking (Optional)
# SENTRY_DSN=your_sentry_dsn_here

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# Performance Monitoring (Optional)
# Enable detailed performance logging
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug logging in development
DEBUG=true

# Enable hot reload for development
HOT_RELOAD=true

# Enable source maps for debugging
ENABLE_SOURCE_MAPS=true

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable experimental features
ENABLE_WEBSOCKET_REAL_TIME=false
ENABLE_ML_PREDICTIONS=false
ENABLE_SOCIAL_FEATURES=false

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Backup API providers (in case Alpha Vantage is down)
# BACKUP_API_KEY=your_backup_api_key
# BACKUP_API_URL=https://backup-provider.com/api

# =============================================================================
# SECURITY HEADERS (Production)
# =============================================================================

# Content Security Policy
CSP_ENABLED=true

# HTTPS enforcement
FORCE_HTTPS=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# GitHub Pages deployment
GITHUB_PAGES_ENABLED=true
PUBLIC_URL=/eur-usd-trading

# CDN Configuration (Optional)
# CDN_URL=https://cdn.yoursite.com

# =============================================================================
# INSTRUCTIONS FOR DEVELOPERS
# =============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Get Alpha Vantage API key: https://www.alphavantage.co/support/#api-key
# 3. Replace "your_api_key_here" with your actual API key
# 4. Adjust other settings as needed for your environment
# 5. Never commit .env file to version control (already in .gitignore)

# =============================================================================
# TROUBLESHOOTING
# =============================================================================

# If you get API errors:
# - Check your API key is valid
# - Verify you haven't exceeded rate limits (5 requests/minute)
# - Confirm Alpha Vantage service is online

# If the app won't start:
# - Ensure all required variables have values
# - Check PORT is not already in use
# - Verify NODE_ENV is set correctly
