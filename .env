# EUR/USD Trading Platform - Local Development Configuration
# =================================================================
# This file contains your actual API keys and sensitive configuration
# NEVER commit this file to version control - it's in .gitignore
# Copy from .env.example and customize for your development environment

# =================================================================
# APPLICATION CORE SETTINGS
# =================================================================
NODE_ENV=development
PORT=3000
APP_BASE_URL=http://localhost:3000
DEBUG_MODE=true

# =================================================================
# MARKET DATA API CONFIGURATION  
# =================================================================
# Replace with your actual Alpha Vantage API key
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=demo
ALPHA_VANTAGE_API_URL=https://www.alphavantage.co/query

# API Configuration
API_RATE_LIMIT=5
API_TIMEOUT=5000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000

# =================================================================
# CACHING CONFIGURATION
# =================================================================
CACHE_STRATEGY=memory
CACHE_TIMEOUT=300000
CACHE_ENABLED=true
CACHE_MAX_ENTRIES=1000

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CSP_LEVEL=moderate
SESSION_SECRET=development_secret_replace_in_production_32_chars_minimum

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_WEBSOCKET=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_PRICE_ALERTS=true
ENABLE_TECHNICAL_INDICATORS=true
ENABLE_CHART_EXPORT=true
ENABLE_MULTIPLE_TIMEFRAMES=true
ENABLE_MACHINE_LEARNING=false
ENABLE_SOCIAL_FEATURES=false
ENABLE_PORTFOLIO_TRACKING=false
ENABLE_DARK_MODE=true
ENABLE_RESPONSIVE_CHARTS=true
ENABLE_ACCESSIBILITY_FEATURES=true

# =================================================================
# PERFORMANCE & MONITORING
# =================================================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_ANALYTICS=false
LIGHTHOUSE_CI_ENABLED=false

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=debug
LOG_FORMAT=simple
LOG_API_REQUESTS=true
LOG_PERFORMANCE=true

# =================================================================
# DEVELOPMENT TOOLS
# =================================================================
ENABLE_HMR=true
GENERATE_SOURCEMAP=true
ANALYZE_BUNDLE=false
USE_MOCK_DATA=false
HEALTH_CHECK_ENABLED=true

# =================================================================
# FINANCIAL PLATFORM SPECIFIC
# =================================================================
DEFAULT_CURRENCY_PAIR=EUR/USD
DEFAULT_TIMEFRAME=1h
MAX_HISTORICAL_DATA=1000
PRICE_PRECISION=5
MAX_ALERT_COUNT=10
RATE_LIMIT_PER_USER=100
AUDIT_ENABLED=true
AUDIT_LEVEL=basic
